<div class="layout">
  <div class="grid grid--cols-2">
    {% for entry in releases_list limit:6 %}
    {% assign parts = entry | split: "|||" %}
    {% assign date = parts[0] %}
    {% assign title = parts[1] %}
    {% assign cover = parts[2] %}
    <div class="row">
      <div class="grid">
        <div class="col col--span-3">
          <div class="grid grid--cols-1">
            <div class="row">
              {% if date == today %}
              <p class="text">Today</p>
              {% elsif date == tomorrow %}
              <p class="text">Tomorrow</p>
              {% else %}
              <p class="text" style="min-width:25px;">{{ date | date: "%e" }} - {{ date | date: "%A" }}</p>
              {% endif %}
            </div>

            <div class="row">
              <p class="title title--small" data-clamp="1">{{ title }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<div class="title_bar">
  <img class="image" src="{{ icon_data }}">
  <span class="title">Upcoming TV Episodes</span>
  <span class="instance">{{ today | date: "%e %A" }}</span>
</div>